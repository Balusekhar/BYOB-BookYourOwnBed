<% layout("/layouts/boilerplate") %>
<body>
  <div class="container mt-5">
    <h1 class="text-center mb-4">All Listings</h1>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% allListings.forEach(listing => { %> 
        <div class="col">
          <!-- Adding the anchor tag around the entire card to make it clickable -->
          <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
            <div class="card h-100 shadow-sm cursor-pointer">
              <img src="<%= listing.image %>" class="card-img-top" alt="<%= listing.title %>">
              <div class="card-footer bg-white text-center">
                <h5 class="card-title mt-2"><%= listing.title %></h5>
                <p class="text-muted">â‚¹<%= listing.price.toLocaleString("en-IN") %> / night</p>
              </div>
            </div>
          </a>
        </div>
      <% }); %>
    </div>
  </div>
</body>
